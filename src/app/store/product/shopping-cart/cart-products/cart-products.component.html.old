<mat-grid-list cols="8" rowHeight="500px">
  <mat-grid-tile [colspan]="4">
    <div style="height: 100%; width: 100%;">
    <mat-grid-list cols="4" rowHeight=500px>
      <mat-grid-tile *ngFor="let product of cartProducts">
        <mat-card class="example">
          <!--might change here the route-->
          <a [routerLink]="['/products/product', product.productId]">
            <img
              mat-mat-card-image
              [src]="product.productImage"
              alt=""
              width="360px"
              height="640px"
            />
          </a>
          <mat-card-content>
            <mat-card-subtitle style="text-align: center;"
              ><h3>{{ product.productCategory }}</h3></mat-card-subtitle
            >
            <a
              [routerLink]="['/products/product', product.productId]"
              style="text-decoration: none;"
              ><h4 style="text-align: center;">
                <strong>{{ product.productName }}</strong>
              </h4></a
            >
            <p style="text-align: center;">{{ product.productDescription }}</p>
            <mat-divider></mat-divider>
            <span
              ><p style="text-align: center;">
                $ {{ product.productPrice }}
              </p></span
            >
            <span >
              <button mat-icon-button  ><mat-icon >cancel</mat-icon></button>
            </span >
          </mat-card-content>
        </mat-card>
      </mat-grid-tile>
    </mat-grid-list>
    </div>
  </mat-grid-tile>

  <mat-grid-tile [colspan]="4">
    <app-cart-calc></app-cart-calc>
  </mat-grid-tile>
</mat-grid-list>
